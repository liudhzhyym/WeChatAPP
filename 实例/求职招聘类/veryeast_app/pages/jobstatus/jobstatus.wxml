<!--pages/jobstatus/jobstatus.wxml-->
<view class="jobstatus_wrap">
      <view class="middle bottom">
            <view bindtap="data_back" data-job_status="1" data-status="{{arr[0]}}" class="dingyue none_bottom">
                <view class="left">
                    {{arr[0]}}
                </view>
                <view class="right">
                    <image  wx:if="{{status ==arr[0] ? 'true' :''}}" class="image2" src="../searchend/image/_109.png"></image>
                </view>
            </view>
             
            <view bindtap="data_back" data-job_status="2" data-status="{{arr[1]}}" class="dingyue none_bottom">
                <view class="left">
                    {{arr[1]}}
                </view>
                <view class="right">
                    <image wx:if="{{status ==arr[1] ? 'true' :''}}" class="image2" src="../searchend/image/_109.png"></image>
                </view>
            </view>
            
            <view bindtap="data_back" data-job_status="3" data-status="{{arr[2]}}" class="dingyue none_bottom"  style="border-bottom:none;">
                <view class="left">
                    {{arr[2]}}
                </view>
                <view class="right">
                    <image wx:if="{{status ==arr[2] ? 'true' :''}}" class="image2" src="../searchend/image/_109.png"></image>
                </view>
            </view>
        </view>
</view>
