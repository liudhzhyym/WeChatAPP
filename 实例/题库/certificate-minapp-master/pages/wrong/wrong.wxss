.problem-scroll {
  height: 100%;
}

.problem-container {
  display: flex;
  flex-direction: column;
  padding: 8px;
  padding-top: 0;
}

.problem-count {
  font-size: 13px;
  color: #aaa;
  align-self: flex-end;
}

label {
  display:block;
  margin: 16px 12px;
}

.problem-description {
  margin: 0 8px;
  margin-bottom: 16px;
}

.problem-answer {
  margin: 0 8px;
  margin-bottom: 16px;
}

.problem-image {
  width: 36px;
  height: 36px;
  margin: 6px;
  vertical-align: middle;
}

.choice-image {
  width: 28px;
  height: 28px;
  margin-right: 6px;
  vertical-align: middle;
}

.problem-answer-container {
  padding: 20px 12px;
  background-color:white;
  border: 1px solid #d9d9d9;
  margin: 0 8px;
  margin-bottom: 60px;
}

.problem-answer {
  margin: 0 8px;
  margin-bottom: 16px;
  display: block;
}

.problem-answer-image {
  width: 80px;
  height: 80px;
  margin-right: 16px;
  float: right;
}

.tabbar {
  display: flex;
  position: absolute;
  z-index: 500;
  bottom: 0;
  width: 100%;
  background-color: #f7f7fa;
  border-top: 1px solid #c0bfc4;
}

.tabbar-item {
  display: block;
  flex: 1;
  padding: 5px 0 0;
  font-size: 0;
  color: #999;
  text-align: center;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.tabbar-icon {
  display: inline-block;
  width: 27px;
  height: 27px;
}

.tabbar-label {
  text-align: center;
  color: #999;
  font-size: 11px;
  line-height: 1.8;
  display:block;
}

.tabbar-image {
  width:100%;
  height:100%;
}
