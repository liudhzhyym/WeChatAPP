@import "view-list-template/view-list.wxss";

page {
  background: #f0ede2;
}

/*首页图*/

.home .img {
  width: 100%;
  height: 338rpx;
}

.home .img image {
  width: 100%;
  height: 100%;
}

/*分类*/

.category {
  display: flex;
  justify-content: space-around;
  padding-top: 48rpx;
  padding-bottom: 38rpx;
  background: #fff;
}

.category .box {
  flex: 1 1 auto;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category .box image {
  width: 124rpx;
  height: 124rpx;
  border: none;
  border-radius: 50%;
}

.category .box .icon {
  position: absolute;
  bottom: 45rpx;
  right: 25rpx;
  height: 68rpx;
  width: 68rpx;
  border-radius: 50%;
  padding: 10rpx;
  background: #fff;
}

.category .box .icon view {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.category .box:nth-of-type(1) .icon view {
  background: #00aeff;
}

.category .box:nth-of-type(2) .icon view {
  background: #1dd6ac;
}

.category .box:nth-of-type(3) .icon view {
  background: #ffa506;
}

.category .box:nth-of-type(4) .icon view {
  background: #fe4e50;
}

.category .box .icon view {
  display: flex;
  align-items: center;
}

.category .box .icon text {
  display: block;
  margin: 0 auto;
  background: url(/images/home/img.png) no-repeat;
  background-size: 158rpx 40rpx;
}

.category .box:nth-of-type(1) .icon view text {
  height: 38rpx;
  width: 32rpx;
  background-position: -84rpx 0;
}

.category .box:nth-of-type(2) .icon view text {
  height: 24rpx;
  width: 32rpx;
  background-position: -52rpx 0;
}

.category .box:nth-of-type(3) .icon view text {
  height: 38rpx;
  width: 32rpx;
  background-position: -18rpx 0;
}

.category .box:nth-of-type(4) .icon view text {
  height: 40rpx;
  width: 40rpx;
  background-position: -116rpx 0;
}

.category .box .title {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #948475;
}

.slide {
  margin-top: 22rpx;
  background: #fff;
  padding: 0 36rpx;
}

.slide .title {
  padding: 28rpx 0 35rpx;
}

.slide .title text:first-child {
  font-size: 30rpx;
  font-weight: bolder;
  color: #7f7469;
  padding-right: 20rpx;
}

.slide .title text:last-child {
  font-size: 22rpx;
  font-weight: bold;
  color: #bbb4af;
  border-left: 1px solid #bbb4af;
  padding-left: 20rpx;
}

/*轮番*/

.slide-image .image-wrapper {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.slide-image .image-wrapper view {
  width: 33.33%;
  text-align: center;
}

.slide-image .image-wrapper image {
  width: 210rpx;
  height: 158rpx;
  border-radius: 10rpx;
}
.slide-image .image-wrapper text {
  display: block;
  width: 100%;
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 26rpx;
  font-size: 26rpx;
  color: #948475;
  font-weight: bold;
}

.slide .tag {
  display: flex;
  padding: 34rpx 0 24rpx;
  justify-content: space-between;
}

.slide .tag text {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 36rpx;
  border: 1px solid #eee5da;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #bbb4af;
}

.hot-view {
  margin-top: 20rpx;
  background: #fff;
}

.hot-view .tab {
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #edeadd;
  margin-bottom: 20rpx;
}

.hot-view .tab view {
  flex: 1 1 auto;
  text-align: center;
  display: flex;
  height: 100%;
  justify-content: center;
}

.hot-view .tab text {
  width: 172rpx;
  height: 100%;
  font-weight: bold;
  color: #666;
  font-size: 26rpx;
}

.hot-view .tab .active {
  color: #98d361;
  border-bottom: 3px solid #98d361;
  box-sizing: border-box;
}

.fill {
  height: 26rpx;
  width: 100%;
  background: #fff;
}
/*动画*/
.animationData{
  opacity: 0;
}