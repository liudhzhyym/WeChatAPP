.del-page{
    color:black;
    background-color: ghostwhite;
}
.del-page-night{
    color:darkgrey;
    background-color: black;
}
.del-icon{
    text-align: right;
    padding-top: 0.5rem;
    padding-right: 1rem;
    font-size: 1rem;
}
.del-title{
    padding-left: 1.8rem;
    padding-right: 1.8rem;  
    padding-top: 0.8rem;
    font-size: 24px;
    font-weight: bolder;
    text-align: center;
}
.del-aside{
    width: 100%;
    margin: 0 auto;
    text-align: center;
    font-size: 0.8rem;
    color:gray;
    padding-top: 0.4rem;
    padding-bottom: 0.8rem;
}
.allList image{
    width: 100%;
    padding-top: 0.4rem;
    padding-bottom: 0.4rem;
}
.allList .text{
    width: 90%;
    word-wrap: break-word;
    overflow-wrap: break-word;
    text-align:justify;text-justify:inter-word;
    margin: 0 auto;
    padding:0.5rem 0;
    font-size: 18px;
    font-weight: 300;
}
