/**index.wxss**/

.badge{
  position: absolute;
  top: 36rpx;
  right: 80rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 25rpx;
}
.cells {
  position: relative;
  margin-top: 1rem;
  background-color: #FFFFFF;
  line-height: 1rem;
  font-size: 17px;
}
.cells_after-title {
  margin-top: 0;
}
.cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cell_access {
  color: inherit;
}
.cell_active {
  background-color: #ECECEC;
}
.cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.cell__ft {
  text-align: right;
  color: #999999;
}
.cell__ft_in-access {
  padding-right: 13px;
  position: relative;
}



.body-info {
  height: 200rpx;
  margin-top: 60rpx;
}
.userinfo-avatar {
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
}
.userinfo-nickname {
  margin-top: 20rpx;
  font-size: 38rpx;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
}
.body {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
  overflow-x: hidden;
}
.body-wrapper {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.body-text {
  font-size: 40rpx;
  line-height: 26px;
  color: #ccc;
}
.body-buttons {
  width: 100%;
}
.body-button {
  margin: 25rpx;
  text-align: center;
}
.userinfo-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}